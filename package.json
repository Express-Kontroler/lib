{
	"name": "@kontroler/template",
	"description": "A template for Kontroler projects.",
	"license": "Apache-2.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"version": "1.0.0",
	"engines": {
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:express-kontroler/kontroler-template.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo",
		"!dist/__tests__"
	],
	"scripts": {
		"lint": "npx eslint src --fix",
		"format": "npx prettier --write src",
		"build": "npx tsc -b .",
		"test": "npx jest --coverage",
		"dev": "npx nodemon"
	},
	"devDependencies": {
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.38",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.0",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"ts-jest": "^28.0.3",
		"ts-node": "^10.8.0",
		"typescript": "^4.7.2"
	}
}
