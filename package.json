{
	"name": "@kontroler/lib",
	"description": "A lightweight express framework for scalable Node.js APIs.",
	"license": "Apache-2.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"version": "1.0.0",
	"engines": {
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:express-kontroler/lib.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo",
		"!dist/__tests__"
	],
	"scripts": {
		"format": "npx prettier --write src test",
		"lint": "npx eslint src test --fix",
		"test": "npx vitest run",
		"test:coverage": "npx vitest run",
		"test:watch": "npx vitest run",
		"test:coverage:watch": "npx vitest run --coverage",
		"build": "npx tsc -b .",
		"build:dev": "npx tsc -w"
	},
	"dependencies": {
		"express": "^4.18.1",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.38",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"c8": "^7.11.3",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.6.2",
		"typescript": "^4.7.2",
		"vitest": "^0.17.0"
	}
}
